<%- include('../partials/head') %>
<%- include('../partials/background') %>

<style>
  .container {
    max-width: 1000px;
    margin: auto;
    margin-top: 100px;
    background: rgba(255, 255, 255, 0.95);
    padding: 30px;
    border-radius: 15px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
  }

  h1 {
    text-align: center;
    margin-bottom: 30px;
    color: #333;
    font-weight: 600;
    font-size: 32px;
  }

  table {
    width: 100%;
    border-collapse: collapse;
    overflow-x: auto;
  }

  thead {
    background-color: #343a40;
    color: #fff;
  }

  th, td {
    padding: 14px 18px;
    text-align: center;
    font-size: 16px;
  }

  tr:nth-child(even) {
    background-color: #f7f7f7;
  }

  tr:hover {
    background-color: #e9f5ff;
    transition: background-color 0.3s ease;
  }

  td {
    color: #444;
  }

  p {
    text-align: center;
    font-size: 18px;
    color: #666;
    margin-top: 20px;
  }

  /* Mobile responsive styles */
  @media screen and (max-width: 768px) {
  table, thead, tbody, th, td, tr {
    display: block;
  }

  thead {
    display: none;
  }

  tr {
    margin-bottom: 20px;
    border: 1px solid #ddd;
    border-radius: 15px;
    padding: 15px;
    background: #f9f9f9;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
  }

  tr:hover {
    background-color: #f0f7ff;
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
  }

  td {
    text-align: left;
    padding: 12px 18px;
    position: relative;
    font-size: 16px;
    border: none;
    color: #333;
    background-color: #fff;
    border-radius: 8px;
    margin-bottom: 8px;
  }

  td::before {
    content: attr(data-label);
    font-weight: bold;
    font-size: 14px;
    color: #777;
    margin-bottom: 8px;
    display: block;
    transition: color 0.3s ease;
  }

  td:hover::before {
    color: #007bff;
  }

  p {
    font-size: 18px;
    color: #444;
    text-align: center;
    margin-top: 20px;
  }

  /* Add smooth scroll for the table rows */
  table {
    -webkit-overflow-scrolling: touch;
  }
}
</style>

<%- include('../partials/nav') %>

<div class="container">
  <h1>Guest Orders</h1>
  
  <% if (orders.length === 0) { %>
    <p>No orders yet.</p>
  <% } else { %>
    <table>
      <thead>
        <tr>
          <th>Home</th>
          <th>Guest Name</th>
          <th>Phone</th>
          <th>Check-in / Check-out</th>
          <th>Payment</th>
          <th>Email</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
          <tr>
            <td data-label="Home"><%= order.home?.Name || 'Deleted Home' %></td>
            <td data-label="Guest Name"><%= order.name || 'Unknown Guest' %></td>
            <td data-label="Phone"><%= order.phone %></td>
            <td data-label="Check-in / Check-out"><%= order.checkin %> to <%= order.checkout %></td>
            <td data-label="Payment"><%= order.payment %></td>
            <td data-label="Email"><%= order.guest?.email || 'Email' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } %>
</div>
</body>
</html>
