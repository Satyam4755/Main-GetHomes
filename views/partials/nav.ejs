<%- include('../partials/head') %>

<%-include('../partials/background')%>
<style> 
    h1 {
        text-align: center;
        margin-top: 40px;
        color: #2c3e50;
        font-size: 36px;
        animation: fadeInDown 0.8s ease forwards;
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        padding: 40px 20px;
    }

    .card {
        background: white;
        border-radius: 18px;
        box-shadow: 0 8px 22px rgba(0, 0, 0, 0.1);
        overflow: hidden;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        width: 260px;
        position: relative;
        animation: floatUp 0.7s ease forwards;
    }
    .card img {
    width: 100%;
    aspect-ratio: 16/9;
    object-fit: cover;
    transition: transform 0.4s ease, filter 0.4s ease;
}

.card img:hover {
    transform: scale(1.05);
    filter: brightness(1.1);
}

    .card:hover {
        transform: translateY(-6px);
        box-shadow: 0 10px 28px rgba(0, 0, 0, 0.15);
    }

    .card img {
        width: 100%;
        aspect-ratio: 16/9;
        object-fit: cover;
        transition: 0.3s ease;
    }

    .card img:hover {
        filter: brightness(1.05);
    }

    .content {
        padding: 16px;
        animation: fadeInUp 0.8s ease forwards;
    }

    .card h3 {
        margin: 10px 0 6px;
        color: #34495e;
        font-size: 18px;
    }

    .card p {
        margin: 4px 0;
        color: #666;
        font-size: 14px;
    }

    .reserve {
        background-color: #e67e22;
        color: white;
        border: none;
        border-radius: 6px;
        padding: 9px 16px;
        margin-top: 10px;
        font-size: 14px;
        cursor: pointer;
        transition: 0.3s ease;
        box-shadow: 0 4px 12px rgba(230, 126, 34, 0.4);
    }

    .reserve:hover {
        background-color: #d35400;
        transform: scale(1.05);
        box-shadow: 0 6px 16px rgba(211, 84, 0, 0.5);
    }

    .fav-btn {
        float: right;
        margin-top: -30px;
        animation: fadeIn 1s ease;
    }

    .fav-btn img {
        width: 26px;
        height: 26px;
        transition: all 0.3s ease;
        border-radius: 50%;
    }

    #favImg1 {
        filter: grayscale(1);
    }

    #favImg1:hover,
    #favImg2:hover {
        filter: grayscale(0);
        transform: scale(1.1);
        box-shadow: 0 0 6px red;
    }

    h2 {
        text-align: center;
        color: #1abc9c;
        margin-top: 50px;
        font-size: 24px;
        animation: fadeInUp 0.8s ease forwards;
    }

    h3 {
        color: #555;
        text-align: justify;
        margin: 20px 40px;
        font-weight: 400;
        line-height: 1.6;
        animation: fadeInUp 1s ease forwards;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    @media (max-width: 768px) {
        .card {
            width: 80%;
        }

        .cards-container {
            padding: 20px 10px;
        }
    }

    @media (max-width: 480px) {
        .card {
            width: 90%;
        }
    }

    /* Animations */
    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }

    @keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @keyframes floatUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

