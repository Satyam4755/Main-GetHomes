<%-include('../partials/head')%>
<style>
    .form-container {
        background: linear-gradient(135deg, #ffffff, #d4e0f5);
        padding: 2.5rem;
        border-radius: 1.5rem;
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        width: 350px;
        margin: 30px 500px ;
        border: 1px solid #e0e0e0;
    }

    .form-container h2 {
        text-align: center;
        margin-bottom: 2rem;
        color: #2a5298;
        font-family: 'Arial', sans-serif;
        font-size: 1.8rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .form-container .input-group {
        position: relative;
        margin-bottom: 2rem;
    }

    .form-container .input-group input {
        width: 100%;
        padding: 14px 12px;
        border: 2px solid #ccc;
        border-radius: 0.75rem;
        outline: none;
        font-size: 1rem;
        transition: border-color 0.3s, box-shadow 0.3s;
        background: #f9f9f9;
    }

    .form-container .input-group input:focus {
        border-color: #2a5298;
        box-shadow: 0 0 10px #2a5298;
        background: #ffffff;
    }

    .form-container .input-group label {
        position: absolute;
        top: 50%;
        left: 14px;
        transform: translateY(-50%);
        color: #aaa;
        font-size: 1rem;
        pointer-events: none;
        transition: all 0.3s ease;
        background: #f9f9f9;
        padding: 0 6px;
        border-radius: 0.25rem;
    }

    .form-container .input-group input:focus + label,
    .form-container .input-group input:valid + label {
        top: -12px;
        font-size: 0.8rem;
        color: #2a5298;
        background: #ffffff;
    }

    .form-container button {
        width: 100%;
        padding: 14px;
        background: linear-gradient(135deg, #2a5298, #1e3c72);
        color: #fff;
        border: none;
        border-radius: 0.75rem;
        font-size: 1.1rem;
        cursor: pointer;
        transition: background 0.3s ease, transform 0.2s ease;
        font-family: 'Arial', sans-serif;
        text-transform: uppercase;
    }

    .form-container button:hover {
        background: linear-gradient(135deg, #1e3c72, #2a5298);
        transform: scale(1.05);
    }
    .selected{
        color: white; 
        text-decoration: none;
        padding: 0 1rem; 
        background-color: rgba(0, 0, 139, 0.794);
    }
    .normal{
        color: white; 
        text-decoration: none; 
        padding: 0 1rem;

    }
    .normal:hover{
        color: white; 
        text-decoration: none; 
        padding: 0 1rem; 
        background-color: rgba(0, 0, 139, 0.794);
    }
    #signup {
    text-align: center;
    margin-top: 1rem;
    }

    #signup a {
    color: #2a5298;
    text-decoration: none;
    font-size: 1rem;
    font-family: 'Arial', sans-serif;
    padding: 8px 16px;
    border-radius: 8px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    display: inline-block;
    }

    #signup a:hover {
    background-color: #0c85ef;
    color: #fff;
    transform: scale(1.05);
    }
</style>
<%-include('../partials/nav')%>
<body>
    <div class="form-container">

        
        <%if(!isLogedIn){%>
            <h2>Login</h2>
            <form action="/login" method="POST">
            <%-include('../partials/errorHandel')%>
                <div class="input-group">
                    <input type="email" id="email" name="email" required value="<%= oldInput.email?oldInput.email:''%>">
                    <label for="email">Email</label>
                </div>
                <div class="input-group">
                    <input type="password" id="password" name="password" required />
                    <label for="password">Password</label>
                </div>
                <button type="submit">LogIn</button>
            </form>
            <h4 id="signup">
                <a href="/signUP"><b>New User</b></a>
            </h4>
        <%}else{%>
            <h2 style="text-align: center; margin-top: 50px; color: #2a5298; font-family: 'Arial', sans-serif; font-size: 1.8rem; text-transform: uppercase; letter-spacing: 1px;">
                You want to log out!
            </h2>
            <div style="text-align: center; margin-top: 20px;">
                <a href="<%= user.userType === 'guest' ? '/' : '/host/admin_HomeList' %>" 
                    style="display: inline-block; background: linear-gradient(135deg, #2a5298, #1e3c72); color: white; padding: 12px 24px; border-radius: 8px; text-decoration: none; font-size: 1rem; font-family: 'Arial', sans-serif; text-transform: uppercase; transition: background 0.3s ease, transform 0.2s ease;">
                    No! Go back to Home
                </a>
            </div>
            <div style="text-align: center; margin-top: 20px;">
                <form action="/logout" method="post">
                    <input type="submit" value="LogOut" 
                        style="background: linear-gradient(135deg, #cf1111, #a50d0d); color: white; border: none; padding: 12px 24px; border-radius: 8px; cursor: pointer; font-size: 1rem; font-family: 'Arial', sans-serif; text-transform: uppercase; transition: background 0.3s ease, transform 0.2s ease;">
                </form>
            </div>
        <%}%>
    </div>
    
    
</body>
</html>
