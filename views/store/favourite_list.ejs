<%-include('../partials/head')%>
<%-include('../partials/background')%>
<style> 
    h1, h2 {
        text-align: center;
        color: #333;
        margin-top: 20px;
        animation: slideDown 1s ease-in-out;
    }

    @keyframes slideDown {
        0% {
            transform: translateY(-30px);
            opacity: 0;
        }
        100% {
            transform: translateY(0);
            opacity: 1;
        }
    }

    .cards-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 25px;
        padding: 30px;
        animation: fadeIn 1.5s ease;
    }

    @keyframes fadeIn {
        0% {
            opacity: 0;
            transform: scale(0.95);
        }
        100% {
            opacity: 1;
            transform: scale(1);
        }
    }

    .card {
        background-color: #fff;
        width: 280px;
        border-radius: 20px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        overflow: hidden;
        position: relative;
    }

    .card:hover {
        transform: scale(1.05);
        box-shadow: 0 12px 25px rgba(0, 0, 0, 0.2);
    }

    .card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .card:hover img {
        transform: scale(1.1);
    }

    .content {
        padding: 15px;
        background: #fff;
    }

    .card h3 {
        margin: 10px 0;
        color: #f06292;
        font-size: 20px;
    }

    .card p {
        margin: 5px 0;
        color: #666;
        font-size: 14px;
    }

    .reserve {
        display: inline-block;
        margin-top: 10px;
        background-color: #f06292;
        border: none;
        border-radius: 30px;
        padding: 10px 20px;
        font-size: 14px;
        font-weight: bold;
        color: white;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .reserve:hover {
        background-color: #ec407a;
        transform: scale(1.05);
    }

    #favImg {
        width: 30px;
        height: 30px;
        filter: drop-shadow(0px 2px 3px rgba(0,0,0,0.15));
        transition: transform 0.3s ease, filter 0.3s ease;
    }

    #favImg:hover {
        transform: scale(1.2) rotate(10deg);
        filter: brightness(1.2);
    }

    form {
        display: inline-block;
    }

    .fav-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 10px;
    }

    @media (max-width: 768px) {
        .cards-container {
            flex-direction: column;
            align-items: center;
        }

        .card {
            width: 90%;
        }
    }
</style>
<%-include('../partials/nav')%>

<h1>Welcome <%=user.firstName%>! üíñ</h1>
<h2>Here are your favourite dreamy homes üåà</h2>

<div class="cards-container">
    <% homes.forEach(home => { %>
        <div class="card">
            <a href="/user/home-list/<%=home._id %>">
                <img src="<%= home.image %>" alt="Home Image">
            </a>
            <div class="content">
                <h3><%= home.Name %></h3>
                <p><strong>Type:</strong> <%= home.Type %></p>
                <p><strong>Price per night:</strong> ‚Çπ<%= home.Price %></p>
                <p><strong>Location:</strong> <%= home.Location %></p>
                <p><strong>Ratings:</strong>
                    <% for(let i=1; i<=home.Rating; i++){ %> ‚≠ê <% } %>
                </p>
                <div class="fav-container">
                    <a href="/user/booking/<%=home._id%>">
                        <button class="reserve">RESERVE</button>
                    </a>
                    <form action="/user/unfavourite/<%=home._id%>" method="post">
                        <input type="hidden" name="id" value="<%=home._id%>">
                        <button style="background: none; border: none; cursor: pointer;">
                            <img id="favImg" src="/pngtree-red-3d-heart-emoji-realistic-shadow-png-image_4539964.png" alt="Favourite">
                        </button>
                    </form>
                </div>
            </div>
        </div>
    <% }) %>
</div>
</body>
</html>